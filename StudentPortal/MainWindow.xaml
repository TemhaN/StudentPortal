<Window x:Class="StudentPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentPortal"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        TextElement.FontFamily="Roboto"
        TextElement.FontSize="14">
    <Grid Margin="20">
        <materialDesign:Card Padding="20" UniformCornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                           Text="Студенческий Портал"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Username Label -->
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="Имя пользователя"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Margin="0,0,0,5"/>

                <!-- Username Textbox -->
                <TextBox Grid.Row="3" Grid.Column="1"
                         x:Name="logbox"
                         Width="250"
                         materialDesign:HintAssist.Hint="Введите логин"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,0,0,10"/>

                <!-- Password Label -->
                <TextBlock Grid.Row="4" Grid.Column="1"
                           Text="Пароль"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Margin="0,0,0,5"/>

                <!-- Password Box -->
                <PasswordBox Grid.Row="5" Grid.Column="1"
                             x:Name="PasswordBox"
                             Width="250"
                             materialDesign:HintAssist.Hint="Введите пароль"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             Margin="0,0,0,10"/>

                <!-- Register Button -->
                <Button Grid.Row="3" Grid.Column="2"
                        x:Name="regbtn"
                        Content="Регистрация"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="regbtn_Click"
                        Margin="20,0,0,0"/>

                <!-- Login Button -->
                <Button Grid.Row="5" Grid.Column="2"
                        x:Name="logbtn"
                        Content="Войти"
                        Click="logbtn_Click"
                        Margin="20,0,0,0"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>